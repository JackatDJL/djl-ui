{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["compile","^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "cache": true,
      "persistent": false,
      "dependsOn": ["compile","^lint"]
    },
    "dev": {
      "dependsOn": ["compile"],
      "cache": false,
      "persistent": true
    },
    "compile": {
      "dependsOn": ["^compile"],
      "inputs": ["tsconfig.json"],
      "outputs": ["dist/**"]
    }
  },
  "globalEnv": [".env.local"]
}
