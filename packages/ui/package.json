{
  "name": "@jackatdjl/djl-ui",
  "version": "0.0.1",
  "sideEffects": false,
  "license": "MIT",
  "exports": {
    ".": {
      "types": "./src/index.tsx",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./fx": {
      "types": "./src/fx/fs.tsx",
      "import": "./dist/fx/fs.mjs",
      "require": "./dist/fx/fs.js"
